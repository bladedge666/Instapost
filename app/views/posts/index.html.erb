<% @posts.each do |post| %>
  <%= image_tag post.user.photo, style: "width:200px" %>
  <%= post.user.name %>
  <%= image_tag post.photo, style: "width:200px" %>
  <%= post.description %>
  <%= link_to 'View Post', post_path(post.id) %>
  <% if post.user == current_user %>
    <%= link_to 'Edit Post', edit_post_path(post) %>
    <%= link_to 'Delete Post', post, method: :delete %>
  <% end %>
  
  <% post.comments.each do |comment| %>
    <p><%= comment.user.name %> says - <%= comment.text %></p>
    <% if comment.user == current_user %>
      <%= link_to "Delete", post_comment_path(post_id: post.id, id: comment.id), method: :delete, class: "btn btn-danger" %>
    <% end %>
  <% end %>

  <% if user_signed_in? %>
    <%= simple_form_for Comment.new, url: post_comments_path(post), method: :post do |f| %>
      <%= f.input :text, label: "Comment", placeholder: "Add a Comment" %>
      <%= f.submit "Post", class: "btn btn-primary btn-block" %>
    <% end %>
  <% end %>

<% end %>
  